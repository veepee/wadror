<div class="row">
  <div class="col-md-3">
    <h3>Best beers</h3>
    <%= render 'toplist', items: @best_beers %>
  </div>
  <div class="col-md-3">
    <h3>Best breweries</h3>
    <%= render 'toplist', items: @best_breweries %>
  </div>
  <div class="col-md-3">
    <h3>Best styles</h3>
    <%= render 'toplist', items: @best_styles %>
  </div>
</div>

<div class="row">
  <div class="col-md-3">
    <h3>Most active users</h3>
    <ul>
    <% @active_users.each do |user| %>
      <li><%= link_to user.username, user %> with <%= user.ratings.count %> ratings</li>
    <% end %>
    </ul>
  </div>
  <div class="col-md-3">
    <h3>Recent ratings</h3>
    <ul>
      <% @recent_ratings.each do |rating| %>
        <li><%= rating %> by <%= link_to rating.user.username, rating.user %> </li>
      <% end %>
    </ul>
  </div>
</div>

<%= link_to 'Add new rating', new_rating_path, class:"btn btn-primary" if current_user %>
